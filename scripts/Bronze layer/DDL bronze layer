/*
================================================
Checking table and if exist drop them, and creating table
for the bronze layer 

 ===============================================
*/


-- check if table cust_info exists and if so, drop it
if OBJECT_ID('bronze.crm_cust_info','U') is not null 
	drop table bronze.crm_cust_info;
go

-- Bronze table cust info 
CREATE TABLE bronze.crm_cust_info
(
	cst_id int,
	cst_key nvarchar(50),
	cst_firstname nvarchar(50),
	cst_lastname nvarchar(50),
	cst_marital_status nvarchar(50),
	cst_gndr nvarchar(50),
	cst_create_date datetime

);
go

-- check if table prd_info exists and if so, drop it
if OBJECT_ID('bronze.crm_prd_info','U') is not null 
	drop table bronze.crm_prd_info;
go

-- Bronze table cust info 
CREATE TABLE bronze.crm_prd_info
(
	prd_id		int,
	prd_key		nvarchar(50),
	prd_nm		nvarchar(50),
	prd_cost	float,
	prd_start_dt nvarchar(50),
	prd_end_dt	nvarchar(50)
);
go

-- check if table sales details exists and if so, drop it
if OBJECT_ID('bronze.crm_sales_details','U') is not null 
	drop table bronze.crm_sales_details;
go

-- Bronze table sales details 
CREATE TABLE bronze.crm_sales_details
(
	sls_ord_num nvarchar(50),
	sls_prd_key nvarchar(50),
	sls_cust_id int,
	sls_order_dt int,
	sls_ship_dt int,
	sls_due_dt int,
	sls_sales float,
	sls_quantity int,
	sls_price float
);
go


-- check if table CUST_AZ12 exists and if so, drop it
if OBJECT_ID('bronze.erp_cust_aZ12','U') is not null 
	drop table bronze.erp_cust_aZ12;
go

-- Bronze table CUST_AZ12
CREATE TABLE bronze.erp_cust_aZ12
(
	CID nvarchar(50),
	BDATE datetime,
	GEN nvarchar(50)
);
go

-- check if table LOC_A101 exists and if so, drop it
if OBJECT_ID('bronze.erp_loc_a101','U') is not null 
	drop table bronze.erp_loc_a101;
go

-- Bronze table LOC_A101
CREATE TABLE bronze.erp_loc_a101
(
	CID nvarchar(50),
	CNTRY nvarchar(50)
);
go

-- check if table PX_CAT_G1V2 exists and if so, drop it
if OBJECT_ID('bronze.erp_px_cat_g1V2','U') is not null 
	drop table bronze.erp_px_cat_g1v2;
go

-- Bronze table PX_CAT_G1V2
CREATE TABLE bronze.erp_px_cat_g1v2
(
	ID nvarchar(50),
	CAT nvarchar(50),
	SUBCAT nvarchar(50),
	MAINTENANCE nvarchar(50)
);
go
